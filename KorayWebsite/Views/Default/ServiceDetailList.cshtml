@using EntityLayer.Concrete
    @model Service

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Status == true)
{

    <div class="container" style="text-align:center; margin-left:auto; margin-right:auto;">

        <div class="card">
            <h1 class="card-title">@Model.DescriptionTitle</h1>
            <div class="card-img">
                <img src="@Model.ImageUrl">
            </div>
            <div class="card-body">

                <p class="card-text"> @Model.ImageDescription</p>

            </div>
        </div>
    </div>
}

else
{
    @await Component.InvokeAsync("ErrorPage")
}

