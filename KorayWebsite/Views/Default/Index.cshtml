@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("HeaderPartial")
<body>

    <!-- ======= Header ======= -->
    @await Html.PartialAsync("NavBarPartial")
    <!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero">
        @await Component.InvokeAsync("HomeList")
    </section><!-- End Hero -->

    <main id="main">

        <!-- ======= Clients Section ======= -->
        <section id="clients" class="clients section-bg">
            @await Component.InvokeAsync("ReferenceList")
        </section><!-- End Clients Section -->
        <!-- ======= About Section ======= -->
        <section id="about" class="about section-bg">
            <div class="container">

                <div class="section-title">
                    <h2 data-aos="fade-in">Hakkımızda</h2>
                </div>

                <div class="row gy-4">
                    <div class="image col-xl-5">
                    </div>
                    <div class="col-xl-7">
                        <div class="content d-flex flex-column justify-content-center ps-0 ps-xl-4">

                            @await Component.InvokeAsync("AboutUsList")

                            @await Component.InvokeAsync("SubAboutUsList")

                        </div><!-- End .content-->
                    </div>
                </div>

            </div>
        </section><!-- End About Section -->
        <!-- ======= Services Section ======= -->
        <section id="services" class="services section-bg">
            <div class="container">

                <div class="section-title">
                    <h2 data-aos="fade-in">SERVİSLER</h2>
                </div>

                <div class="row">
                    @await Component.InvokeAsync("ServicesList")
                </div>

            </div>
        </section><!-- End Services Section -->
        <!-- ======= Features Section ======= -->
        <section id="features" class="features section-bg">
            <div class="container">

                <div class="section-title">
                    <h2 data-aos="fade-in">Özellikler</h2>
                </div>
                @await Component.InvokeAsync("FeatureList")
            </div>
        </section><!-- End Features Section -->
        <!-- ======= Portfolio Section ======= -->

        <section id="portfolio" class="portfolio section-bg">

            @await Component.InvokeAsync("PortfolioList")

        </section><!-- End Portfolio Section -->
        <!-- ======= Team Section ======= -->
        <section id="team" class="team section-bg">

            @await Component.InvokeAsync("TeamList")

        </section><!-- End Team Section -->
        <!-- ======= Pricing Section ======= -->
        <section id="pricing" class="pricing section-bg">

            @await Component.InvokeAsync("PriceList")

        </section><!-- End Pricing Section -->
        <!-- ======= Frequently Asked Questions Section ======= -->
        <section id="faq" class="faq section-bg">

            @await Component.InvokeAsync("QuestionList")

        </section><!-- End Frequently Asked Questions Section -->
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact section-bg">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>İletişim</h2>
                </div>

                <div class="row">
                    @await Component.InvokeAsync("ContactList")

                    @await Html.PartialAsync("SendMessage")
                 


                </div>


            </div>

        </section><!-- End Contact Section -->

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->

    @await Html.PartialAsync("FooterPartial")
    
    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Bocor/assets/vendor/aos/aos.js"></script>
    <script src="~/Bocor/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Bocor/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Bocor/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Bocor/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/Bocor/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Bocor/assets/js/main.js"></script>

</body>

</html>