@using EntityLayer.Concrete
@model List<Portfolio>

<div class="container">

    <div class="section-title">
        <h2 data-aos="fade-in">Portfolio</h2>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <ul id="portfolio-flters">
                <li data-filter="*" class="filter-active">Tümü</li>
                <li data-filter=".filter-web">Web</li>
                <li data-filter=".filter-android">Android</li>
                <li data-filter=".filter-masaustu">Masaüstü</li>
            </ul>
        </div>
    </div>

    <div class="row portfolio-container" data-aos="fade-up">

        @foreach (var item in Model)
        {
            @if (item.Status == true)
            {
                <div class="col-lg-4 col-md-6 portfolio-item @item.Type">
                    <div class="portfolio-wrap">
                        <img src="@item.ImageUrl" class="img-fluid" alt="">
                        <div class="portfolio-links">
                            <a href="@item.ImageUrl" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.Title"><i class="bi bi-plus"></i></a>
                            <a href="@item.VideoLink" title="Video"><i class="bi bi-link"></i></a>
                        </div>
                        <div class="portfolio-info">
                            <h4>@item.Title</h4>
                            <p>@item.Subtitle</p>
                        </div>
                    </div>
                </div>
            }

        }


    </div>

</div>